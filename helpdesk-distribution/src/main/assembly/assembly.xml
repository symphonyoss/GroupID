<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.3"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.3 http://maven.apache.org/xsd/assembly-1.1.3.xsd">
    <id>bin</id>
    <formats>
        <format>tar.gz</format>
    </formats>
    <includeBaseDirectory>false</includeBaseDirectory>
    <fileSets>
        <fileSet>
            <directory>${project.basedir}/src/main/scripts</directory>
            <outputDirectory>.</outputDirectory>
            <includes>
                <include>install.sh</include>
            </includes>
            <fileMode>755</fileMode>
            <directoryMode>755</directoryMode>
        </fileSet>
        <fileSet>
            <directory>${project.build.directory}/apps</directory>
            <outputDirectory>${helpdesk.api.dist}</outputDirectory>
            <includes>
                <include>helpdesk-api.jar</include>
            </includes>
            <fileMode>755</fileMode>
            <directoryMode>755</directoryMode>
        </fileSet>
        <fileSet>
            <directory>${project.parent.basedir}/helpdesk-service/helpdesk-service-server/src/main/scripts</directory>
            <outputDirectory>${helpdesk.api.dist}</outputDirectory>
            <includes>
                <include>**/*</include>
            </includes>
            <fileMode>755</fileMode>
            <directoryMode>755</directoryMode>
        </fileSet>
        <fileSet>
            <directory>${project.build.directory}/apps</directory>
            <outputDirectory>${helpdesk.bot.dist}</outputDirectory>
            <includes>
                <include>helpdesk-bot.jar</include>
            </includes>
            <fileMode>755</fileMode>
            <directoryMode>755</directoryMode>
        </fileSet>
        <fileSet>
            <directory>${project.parent.basedir}/helpdesk-bot/src/main/scripts</directory>
            <outputDirectory>${helpdesk.bot.dist}</outputDirectory>
            <includes>
                <include>**/*</include>
            </includes>
            <fileMode>755</fileMode>
            <directoryMode>755</directoryMode>
        </fileSet>
        <fileSet>
            <directory>${project.build.directory}/apps</directory>
            <outputDirectory>${helpdesk.renderer.dist}</outputDirectory>
            <includes>
                <include>helpdesk-renderer.jar</include>
            </includes>
            <fileMode>755</fileMode>
            <directoryMode>755</directoryMode>
        </fileSet>
        <fileSet>
            <directory>${project.parent.basedir}/helpdesk-dynamic-rendering/src/main/scripts</directory>
            <outputDirectory>${helpdesk.renderer.dist}</outputDirectory>
            <includes>
                <include>**/*</include>
            </includes>
            <fileMode>755</fileMode>
            <directoryMode>755</directoryMode>
        </fileSet>
    </fileSets>
</assembly>